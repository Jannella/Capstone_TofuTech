<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Earthquake">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="552dp"
        android:layout_height="756dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/escene1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/D1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Click"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_thambi"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/txtD1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/D2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Click"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_thambi"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/D1" />

    <TextView
        android:id="@+id/txtD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="TextView"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:shadowColor="@color/black"
        android:fontFamily="@font/baloo_thambi"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/D1"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="@+id/D1" />

    <TextView
        android:id="@+id/txtD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:shadowColor="@color/black"
        android:fontFamily="@font/baloo_thambi"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/txtD1"
        app:layout_constraintEnd_toEndOf="@+id/D2"
        app:layout_constraintStart_toStartOf="@+id/D2" />

    <TextView
        android:id="@+id/txtF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:shadowColor="@color/black"
        android:fontFamily="@font/baloo_thambi"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>